generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Artikel {
  id        String   @id @default(cuid()) @map("_id")
  title     String   @unique
  slug      String   @unique
  content   String
  image     String?
  category  String?
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Obat {
  id           String   @id @default(cuid()) @map("_id")
  name         String   @unique
  category     String
  price        Float
  desc         String?
  dosage       String?
  indication   String?
  sideEffects  String?
  warning      String?
  composition  String?
  manufacturer String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model User {
  id               String        @id @default(cuid()) @map("_id")
  clerkId          String        @unique
  name             String
  email            String        @unique
  image            String?
  role             UserRole      @default(USER)
  lastSeen         DateTime?     @default(now())
  articles         Artikel[]
  createdAt        DateTime      @default(now())
  sentMessages     ChatMessage[] @relation("sentMessages")
  receivedMessages ChatMessage[] @relation("receivedMessages")
}

enum UserRole {
  ADMIN
  USER
  APOTEKER
  DOKTER
}

model ChatMessage {
  id         String   @id @default(cuid()) @map("_id")
  content    String
  sender     User     @relation("sentMessages", fields: [senderId], references: [id])
  senderId   String
  receiver   User     @relation("receivedMessages", fields: [receiverId], references: [id])
  receiverId String
  createdAt  DateTime @default(now())
}
